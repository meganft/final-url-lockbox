<div class="notice"></div>
<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
</form>

<input type="text" id="filter-links-text" onkeyup="filterText()" placeholder="Search for links">
<button type="button" id="filter-by-unread" name="filter-unread">Filter By Unread</button>
<button type="button" id="filter-by-read" name="filter-read">Filter By Read</button>
<button type="button" id="show-all" name="show-all">Show All links</button>

<div id="links-list">
    <% @links.each do |link| %>
    <div class="link" data-link-id="<%= link.id %>" data-link-url="<%= link.url %>">
      <div class="panel panel-default">
     <p class='link-title'>Title: <%= link.title %></p>
      <p class='link-url'> URL: <%=link_to link.url, link.url %></p>
      <p><%= link_to "Edit", edit_link_path(link), class:"button" %>
        <%= link_to "Delete" %></p>
        <div class="read-status">
          <% if link.read == true %>
          <p class="marked-read">
            Read? <%= link.read %></p>
            <button class="mark-as-unread">Mark as Unread</button>
            <% else %>
          <p class="link-read">
            <button class="mark-as-read">Mark as Read</button>
             Read? <%= link.read %></p>
          </p>
          <% end %>
        </div>
    </div>
  </div>
    <% end %>
</div>

<h2>Hot Reads!</h2>
<ol id="hot-reads">
<% @hot_links.each do |read| %>
  <li class='hot-read'>
    <a href="<%= read.url %>"><%= read.url %></a>
  </li>
<% end %>
</ol>

